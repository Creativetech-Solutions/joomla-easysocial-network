    <fieldset name="basic">
        <field
            name="title"
            type="Text"
            label="COM_ATS_BUCKETS_HEADING_TITLE"
            required="true"
            />

        <field name="status"
               type="GenericList"
               label="COM_ATS_BUCKETS_HEADING_STATUS"
               source_class="Akeeba\TicketSystem\Admin\Helper\Select" source_method="getTicketStatus"
